@using Emarket.Core.Application.ViewModels.Ads;
@model AdvertisementCardViewModel
@{

    ViewData["Title"] = "Main Advertisement - Full View";

}

<div class="container">

    <div class="row text-center mb-4">

        <div class="col-12 text-center">
            <h2> @Model.ProductName </h2>
        </div>

    </div>

    <div class="row d-flex justify-content-center align-content-center">

        @{

            if (Model == null)
            {
                <h3 class="text-danger"> There are not Advertisement! </h3>
            }
            else
            {

                <div class="d-flex justify-content-center align-content-center flex-column">


                    <div class="col-12 mb-4">

                        <div class="card card-dimension">

                            @*Slider*@
                            <div class="col-12" >

                                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                    </ol>
                                    <div class="carousel-inner">
                                        <div class="carousel-item img-container active ">
                                            <img src="@Model.FirstImage" class="d-block w-100" alt="..." style="width:100%;">
                                        </div>
                                        <div class="carousel-item img-container">
                                            <img src="@Model.SecondImage" class="d-block w-100" alt="..." style="width:100%;">
                                        </div>
                                        <div class="carousel-item img-container">
                                            <img src="@Model.ThirdImage" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="carousel-item img-container">
                                            <img src="@Model.FourthImage" class="d-block w-100" alt="...">
                                        </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </button>
                                </div>

                            </div>


                            <div class="card-body">
                                <h5 class="card-title"> Vendor: @Model.AdvertiserName</h5>
                                <p class="card-text">
                                    @Model.Description
                                </p>
                            </div>

                            <div class="col-12">
                                <div class="btn-group d-flex justify-content-sm-around">
                                    <span>Price: @Model.Price</span>
                                    <span>Category: @Model.CategoryName</span>
                                </div>
                            </div>

                            <div class="card-footer">
                               
                                  <span>Vendor Information:</span>
                                   <ul>
                                      <li>Email: @Model.AdvertiserEmail</li>
                                      <li>Phone: @Model.AdvertiserPhone</li>
                                   </ul>
                                  <hr>
                                 <small>Date: @Model.DateofCreating</small>

                            </div>

                        </div>

                    </div>






                </div>

            }

        }

    </div>


</div>