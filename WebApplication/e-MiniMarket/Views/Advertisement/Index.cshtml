@using Emarket.Core.Application.ViewModels.Ads;
@model List<AdvertisementViewModel>
@{
    ViewData["Title"] = "Main Advertisement";
}

<div class="container">

    <div class="row text-center mb-4">

        <div class="col-8">
            <h2>Main Advertisement:</h2>
        </div>

        <div class="col-3">
            <a asp-controller="Advertisement" asp-action="Create" class="btn btn-outline-success"> Add a New Advertisement </a>
        </div>

    </div>


    <div class="row row-cols-1 row-cols-md-3 g-4">

        @{
            if (Model.Count == 0)
            {
                <div class="text-center col-12">
                    <h4 class="text-danger "> There not advertisement, create one. </h4>
                </div>
            }


            foreach (AdvertisementViewModel advertisementView in Model)
            {

               
                    <div class="col col-sm-6 mb-4">

                        <div class="card">

                            <img class="card-img" src="@advertisementView.FirstImage" style="width:100%; height:225px;" />

                            <div class="card-body">
                                <h5 class="card-title">@advertisementView.ProductName</h5>
                                <p class="card-text">
                                    @advertisementView.Description
                                </p>
                            </div>

                            <div class="col-12">
                                <div class="btn-group d-flex justify-content-sm-around">
                                    <small>Price: @advertisementView.Price</small>
                                    <small>Category: @advertisementView.CategoryName</small>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="btn-group d-flex justify-content-center">
                                    <a asp-controller="Advertisement" asp-action="Delete" asp-route-id="@advertisementView.AdvertisementId" class="btn btn-sm btn-danger">🗑️</a>
                                    <a asp-controller="Advertisement" asp-action="Edit" asp-route-id="@advertisementView.AdvertisementId" class="btn btn-sm btn-warning">✏️</a>
                                </div>
                            </div>

                        </div>

                    </div>
                    

            }

        }

    </div>


</div>