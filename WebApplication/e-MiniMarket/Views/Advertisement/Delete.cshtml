@using Emarket.Core.Application.ViewModels.Ads;
@model AdvertisementSaveViewModel
@{

    ViewData["Title"] = "Main Advertisement Delete";

}

<div class="container">

    <div class="row text-center mb-4">

        <div class="col-12 text-center">
            <h2> Are sure you wanna delete it?</h2>
        </div>

    </div>

    <div class="row d-flex justify-content-center align-content-center">

        @{

            if (Model == null)
            {
                <h3 class="text-danger"> There are Advertisement! </h3>
            }
            else
            {

                <form class="d-flex justify-content-center align-content-center flex-column" method="post" asp-controller="Advertisement" asp-action="Delete">

                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            @*Slider*@
                            <div class="col-12">

                                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    </ol>
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img src="@Model.FirstImg" class="d-block w-100" alt="..." style="width:100%; height:225px;">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="@Model.SecondImg" class="d-block w-100" alt="..." style="width:100%; height:225px;">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="@Model.ThirdImg" class="d-block w-100" alt="..." >
                                        </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </button>
                                </div>
                               
                            </div>

                            <div class="col-md-12">
                                <div class="card-body">
                                    <h5 class="card-title text-center">@Model.ProductName</h5>
                                    <input type="hidden" asp-for="@Model.AdvertisementId" />
                                    <input type="hidden" asp-for="@Model.CategoryId" />
                                    <input type="hidden" asp-for="@Model.Description" />
                                    <input type="hidden" asp-for="@Model.Price" />
                                    <input type="hidden" asp-for="@Model.UserId" />
                                    <input type="hidden" asp-for="@Model.ProductName" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row d-flex justify-content-around align-content-center">
                        <a asp-action="Index" class="btn btn-dark text-white col-4">Cancel</a>
                        <input type="submit" value="Delete" class="btn btn-danger col-4" />
                    </div>

                    @* END *@
                </form>

            }

        }

    </div>


</div>