@using Emarket.Core.Application.ViewModels.Category;
@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Main Category";
}

<div class="container">

    <div class="row text-center mb-4">

        <div class="col-8">
            <h2>Main Category:</h2>
        </div>

        <div class="col-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success"> Add a New Category </a>
        </div>

    </div>


    <div class="row row-cols-1 row-cols-md-3 g-4">

        @{
            if (Model.Count == 0)
            {
                <div class="text-center col-12">
                    <h4 class="text-danger "> There not categories, create one. </h4>
                </div>
            }


            foreach (CategoryViewModel categoryView in Model)
            {

                <div class="col col-sm-6 mb-4">

                    <div class="card">

                        <div class="bg-warning" style="height:35px;"> </div>
                        <div class="card-body">
                            <h5 class="card-title">@categoryView.CategoryName</h5>
                            <p class="card-text">
                                @categoryView.Description
                            </p>
                        </div>

                        <div class="col-12">
                            <div class="btn-group d-flex justify-content-sm-around">
                                <small>Products with: @categoryView.ProductCount</small>
                                <small>User with: @categoryView.UserCount</small>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="btn-group d-flex justify-content-center">
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@categoryView.CategoryId" class="btn btn-sm btn-danger">🗑️</a>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@categoryView.CategoryId" class="btn btn-sm btn-warning">✏️</a>
                            </div>
                        </div>

                    </div>

                </div>

            }

        }

    </div>


</div>