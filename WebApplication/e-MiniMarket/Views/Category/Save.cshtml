@using Emarket.Core.Application.ViewModels.Category;
@model CategorySaveViewModel
@{
    ViewData["Title"] = "Main Category - Create";

    bool editMode = (Model.CategoryId == 0 || Model == null) ? false : true;
}

<div class="container">

    <form class="card" method="post" asp-controller="Category" asp-action="@(editMode==true?"Edit":"Create")">

        <div class="card-header text-center">

            @{
                if (editMode == true)
                {
                    <h4> Editing @Model.CategoryName </h4>
                }
                else
                {
                    <h4> Adding a new Category: </h4>
                }
            }

        </div>

        <div class="card-body container">

            <div class="form-group mb-3">
                <input type="hidden" asp-for="CategoryId" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryName" class="form-label">Category Name:</label>
                <input asp-for="CategoryName" type="text" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">About these Category:</label>
                <input asp-for="Description" type="text" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            @* Here end *@
        </div>

        <div class="card-footer text-center text-muted">
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
            <input type="submit" value="Save" class="btn btn-outline-success" />
        </div>

    </form>

</div>