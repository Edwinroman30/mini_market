@using Emarket.Core.Application.ViewModels.Category;
@model CategorySaveViewModel
@{
    ViewData["Title"] = "Main Category - Delete";

    
}

<div class="container">

    <div class="row text-center mb-4">

        <div class="col-12 text-center">
            <h2> Are sure you wanna delete "@Model.CategoryName"?</h2>
        </div>

    </div>

    <div class="row d-flex justify-content-center align-content-center">

        @{

            if (Model == null)
            {
                <h3 class="text-danger"> There are not category here! </h3>
            }
            else
            {

                <form class="d-flex justify-content-center align-content-center flex-column" method="post" asp-controller="Category" asp-action="Delete">

                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4 bg-warning">

                            </div>
                            <div class="col-md-8">
                                <div class="card-body" style="width:300px;">
                                    <h5 class="card-title text-center">@Model.CategoryName</h5>
                                    <input type="hidden" asp-for="@Model.CategoryName" />
                                    <input type="hidden" asp-for="@Model.CategoryId" />
                                    <input type="hidden" asp-for="@Model.Description" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row d-flex justify-content-around align-content-center">
                        <a asp-action="Index" class="btn btn-dark text-white col-4">Cancel</a>
                        <input type="submit" value="Delete" class="btn btn-danger col-4" />
                    </div>

                    @* END *@
                </form>

            }

        }

    </div>


</div>